$(
    $value = [System.Net.WebUtility]::HtmlEncode($data.Value)
    if (![string]::IsNullOrWhiteSpace($data.ID)) {
        $value = "<span class='pode-text' id='$($data.ID)'>$($value)</span>"
    }

    switch ($data.Style.ToLowerInvariant()) {
        'normal' {
            $value
        }

        'underlined' {
            "<u>$($value)</u>"
        }

        'strikethrough' {
            "<s>$($value)</s>"
        }

        'deleted' {
            "<del>$($value)</del>"
        }

        'inserted' {
            "<ins>$($value)</ins>"
        }

        'italics' {
            "<em>$($value)</em>"
        }

        'bold' {
            "<strong>$($value)</strong>"
        }

        'small' {
            "<small>$($value)</small>"
        }
    }
)