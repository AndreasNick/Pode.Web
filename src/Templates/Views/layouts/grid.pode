<div id="$($data.ID)" class="container pode-grid $($data.CssClasses)" pode-object="$($data.ObjectType)">
    <div class='row'>

    $(
        $count = 0

        foreach ($cell in $data.Cells) {
            $count++

            if (($data.Width -gt 0) -and ($count -gt $data.Width)) {
                "</div><div class='row'>"
                $count = 1
            }

            $width = 'col'
            if ($cell.Width) {
                $width = "col-$($cell.Width)"
            }

            "<div id='$($cell.ID)' class='$($width)' pode-object='$($cell.ObjectType)'>"
                Use-PodeWebPartialView -Path 'shared/_load' -Data @{ Content = $cell.Content }
            "</div>"
        }

        if (($data.Width -gt 0) -and ($count -lt $data.Width)) {
            for ($i = $count; $i -lt $data.Width; $i++) {
                "<div class='$($width)'></div>"
            }
        }
    )

    </div>
</div>