$(
    $value = [System.Net.WebUtility]::HtmlEncode($data.Value)
    $header = "<h$($data.Size) id='$($data.ID)'>$($value)"

    if (![string]::IsNullOrWhiteSpace($data.Secondary)) {
        $sub = [System.Net.WebUtility]::HtmlEncode($data.Secondary)
        $header += "<small class='text-muted'>$($sub)</small>"
    }

    $header += "</h$($data.Size)>"
    $header
)